@{
    @using RazorLight;
    Layout = "_templete.cshtml";
}

@section Header {
    <h1 style="font-size: 18px; font-weight: 400; margin: 2;">Hola <strong>@Model.UserName</strong></h1>
}

@section Body {
    <table border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: 600px;">
        <tr>
            <td bgcolor="#ffffff" align="left"
            style="padding: 20px 30px 40px 30px; color: #344767; font-family: 'Roboto', Helvetica, Arial, sans-serif; font-size: 18px; font-weight: 400; line-height: 25px;">
                <p style="margin: 0;">
                    Se inició un proceso de recuperación de cuenta, si no fuiste tu omite este correo. Para continuar con el proceso de recuperación de cuenta da clic en el siguiente enlace:
                </p>
            </td>
        </tr>

        <tr>
            <td bgcolor="#ffffff" align="left">
                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                        <td bgcolor="#ffffff" align="center" style="padding: 20px 30px 60px 30px;">
                            <table border="0" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td align="center">
                                        <a href="@Model.hrefRedirect" target="_blank"
                                       style="display: inline-block; font-family: 'Roboto', Helvetica, Arial, sans-serif; font-weight: 700; line-height: 1.667; color: #fff; text-align: center; cursor: pointer; border: 1px solid transparent; padding: 0.625rem 1.5rem; font-size: 0.75rem; border-radius: 0.5rem; background-image: linear-gradient(195deg, #42424a 0%, #191919 100%); border: 0; text-decoration: none; etter-spacing: 0; text-transform: uppercase; background-size: 150%;">
                                            Recuperar cuenta
                                        </a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </td>
        </tr> <!-- COPY -->
    </table>
}